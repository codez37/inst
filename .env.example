# Instagram Configuration
IG_USERNAME=your_instagram_username
IG_PASSWORD=your_instagram_password
SESSION_PATH=./session.json

# Instagram Features
IG_ENABLE_COMMENT_REPLY=true
IG_ENABLE_STORY_REPLY=false
IG_MAX_MESSAGE_LENGTH=1000
IG_REQUEST_DELAY=2000
IG_MAX_RETRIES=3

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/taxbotdb
MONGO_MAX_POOL_SIZE=10
MONGO_TIMEOUT=5000
MONGO_SOCKET_TIMEOUT=45000

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Features
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
ENABLE_ADVANCED_TAX=true
ENABLE_TAX_REPORTS=true

# Rate Limiting
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=10

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_KEYS=1000
CACHE_CHECK_PERIOD=600

# Security
ENABLE_CONTENT_FILTER=true
MAX_MESSAGE_PER_USER=50
BLOCK_INAPPROPRIATE=true
ENABLE_USER_BLACKLIST=false

# Tax Configuration
TAX_YEAR=1403
DEFAULT_CURRENCY=IRR

# Optional: Hugging Face (for future use)
# HF_MODEL=
# HF_API_TOKEN=
# HF_ENDPOINT=